// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  playlists     Playlist[]
  notes         Note[]
  watchHistory  WatchHistory[]
  tags          Tag[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model Playlist {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  thumbnail   String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  videos PlaylistVideo[]
}

model PlaylistVideo {
visibleOrder Int
  playlistId  String
  videoId     String    // YouTube video ID
  title       String
  thumbnail   String?
  duration    String?
  channelName String?
  addedAt     DateTime  @default(now())

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@id([playlistId, videoId])
}

model Note {
  id          String   @id @default(cuid())
  userId      String
  videoId     String   // YouTube video ID
  timestamp   Int      // Seconds into video
  text        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  driveFileId String?  // Google Drive file ID if synced

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, videoId])
}

// Watch History for tracking user progress
model WatchHistory {
  id          String   @id @default(cuid())
  userId      String
  videoId     String   // YouTube video ID
  videoTitle  String?  // Cached video title
  thumbnail   String?  // Cached thumbnail URL
  channelName String?  // Cached channel name
  progress    Int      @default(0) // Seconds watched
  duration    Int      @default(0) // Total duration in seconds
  completed   Boolean  @default(false)
  lastWatched DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId])
  @@index([userId, lastWatched])
}

// Custom Tags for organizing videos, playlists, and channels
model Tag {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String   @default("#6366f1") // Default indigo color
  createdAt DateTime @default(now())
  
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     TaggedItem[]
  
  @@unique([userId, name])
  @@index([userId])
}

// Junction table for tagging videos, playlists, or channels
model TaggedItem {
  id         String   @id @default(cuid())
  tagId      String
  itemId     String   // YouTube video ID, playlist ID, or channel ID
  itemType   String   // "video", "playlist", or "channel"
  title      String?  // Cached title
  thumbnail  String?  // Cached thumbnail
  addedAt    DateTime @default(now())
  
  tag Tag @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@unique([tagId, itemId, itemType])
  @@index([tagId])
  @@index([itemId, itemType])
}
